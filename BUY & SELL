            text-align: center;
            color: #007BFF;
        }

        .options {
            display: flex;
            justify-content: center;
            margin: 20px 0;
        }

        .options button {
            padding: 15px 30px;
            font-size: 18px;
            background-color: #007BFF;
            color: white;
            border: none;
            margin: 0 15px;
            cursor: pointer;
            border-radius: 5px;
        }

        .options button:hover {
            background-color: #0056b3;
        }

        section {
            margin-top: 30px;
        }

        .product-list {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
        }

        .product-card {
            background-color: #f9f9f9;
            padding: 15px;
